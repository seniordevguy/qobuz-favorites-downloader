# Qobuz Credentials (Required)
QOBUZ_EMAIL=your-email@example.com
QOBUZ_PASSWORD=your-password

# Directory Configuration (Optional - defaults shown)
MUSIC_DIRECTORY=/downloads
CONFIG_DIRECTORY=/config

# Download Quality (Optional)
# 5: MP3 320kbps
# 6: FLAC 16-bit/44.1kHz
# 7: FLAC 24-bit up to 96kHz
# 27: FLAC 24-bit up to 192kHz (highest quality, recommended)
QUALITY=27

# Performance Tuning (Optional - optimized for low-power NAS)
# How often to check for new favorites (in minutes)
CHECK_INTERVAL_MINUTES=30

# Maximum parallel downloads per type (1 = sequential, recommended for low-power systems)
MAX_WORKERS_TRACKS=1
MAX_WORKERS_ALBUMS=1
MAX_WORKERS_ARTISTS=1

# Number of items to process in each batch
BATCH_SIZE=10

# Web UI Configuration (Optional)
ENABLE_WEB_UI=true
WEB_UI_PORT=5000

# Logging Configuration (Optional)
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file rotation to prevent disk fill (size in MB, 0 = no file logging)
LOG_FILE_MAX_MB=10
LOG_FILE_BACKUP_COUNT=3
